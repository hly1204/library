{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: bundle",
      "command": "oj-bundle",
      "args": [
        "-I src",
        "${file}",
        ">${fileDirname}\\${fileBasenameNoExtension}.bundled.cpp"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "C/C++: cl.exe Od 编译",
      "command": "cl.exe",
      "args": [
        "/nologo",
        "/DLOCAL",
        "/Zc:__cplusplus",
        "/std:c++17",
        "/Od",
        "/EHsc",
        "/utf-8",
        "/I\"${workspaceFolder}\\src\"",
        "/Fe:${workspaceFolder}\\temp\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": {
        "cwd": "${workspaceFolder}\\temp"
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "C/C++: cl.exe O2 编译",
      "command": "cl.exe",
      "args": [
        "/nologo",
        "/DLOCAL",
        "/Zc:__cplusplus",
        "/std:c++17",
        "/O2",
        "/EHsc",
        "/utf-8",
        "/I\"${workspaceFolder}\\src\"",
        "/Fe:${workspaceFolder}\\temp\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": {
        "cwd": "${workspaceFolder}\\temp"
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}